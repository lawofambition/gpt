{
  "manifest_version": 3,
  "name": "MilanGPT for Notion",
  "version": "1.0",
  "description": "Edit Notion content with GPT instantly.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["https://www.notion.so/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.notion.so/*"],
      "js": ["content.js"]
    }
  ]
}